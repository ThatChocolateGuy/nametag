{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "src/**",
      "package.json",
      "bun.lockb",
      "yarn.lock"
    ]
  },
  "deploy": {
    "startCommand": "bun src/index.ts",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
