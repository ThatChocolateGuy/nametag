{
  "name": "nametag",
  "version": "1.0.0",
  "description": "Voice biometric recognition app for Even Realities G1 smart glasses - remember everyone you meet",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun src/index.ts",
    "dev": "bun --hot src/index.ts",
    "web": "bun src/webserver.ts",
    "dev:web": "bun --hot src/webserver.ts",
    "migrate": "bun scripts/migrate-to-supabase.ts",
    "vercel-build": "echo 'Vercel build complete'",
    "setup:vercel-env": "powershell -ExecutionPolicy Bypass -File scripts/setup-vercel-env.ps1",
    "setup:vercel-env:bash": "bash scripts/setup-vercel-env.sh",
    "test:deployment": "node test-deployment.js",
    "lint": "npx tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "ThatChocolateGuy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThatChocolateGuy/nametag.git"
  },
  "keywords": [
    "smart-glasses",
    "g1",
    "even-realities",
    "mentraos",
    "voice-recognition",
    "conversation-memory"
  ],
  "dependencies": {
    "@mentra/sdk": "latest",
    "@supabase/supabase-js": "^2.78.0",
    "axios": "^1.7.9",
    "boxen": "5.1.2",
    "chalk": "4.1.2",
    "colorette": "^2.0.20",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "eventsource": "^4.0.0",
    "express": "^4.21.2",
    "openai": "^4.73.1",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.14",
    "@types/ws": "^8.18.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.1.2"
  },
  "resolutions": {
    "chalk": "4.1.2",
    "boxen": "5.1.2"
  }
}
